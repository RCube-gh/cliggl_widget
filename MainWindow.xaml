<Window x:Class="FocusHudWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusHudWpf"
        mc:Ignorable="d"
        Title="FocusHUD" Height="600" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">

    <Border CornerRadius="0,14,14,0" 
            BorderThickness="1"
            MouseDown="Border_MouseDown">
        
        <Border.Background>
            <SolidColorBrush Color="#18688C" Opacity="0.9"/>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#20FFFFFF" Offset="0"/>
                <GradientStop Color="#40FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid x:Name="MainGrid" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Timer Section -->
                <RowDefinition Height="Auto"/> <!-- Current Task -->
                <RowDefinition Height="*"/>    <!-- Task List -->
            </Grid.RowDefinitions>

            <!-- Row 0: Timer Section -->
            <StackPanel Grid.Row="0" Margin="0,20,0,30" HorizontalAlignment="Center">
                 <!-- Play/Stop Button with Timer -->
                 <Border x:Name="PlayButton" 
                        Width="120" Height="120" 
                        CornerRadius="60" 
                        Background="Transparent"
                        BorderBrush="#30FFFFFF" BorderThickness="1"
                        Cursor="Hand"
                        MouseLeftButtonDown="PlayButton_Click">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="TimerText"
                                   Text="25:00" 
                                   Foreground="White" 
                                   FontSize="28" 
                                   FontWeight="Light"
                                   HorizontalAlignment="Center"
                                   FontFamily="Consolas, Monospace"/>
                        <TextBlock x:Name="PlayIcon"
                                   Text="▶" 
                                   Foreground="#a78bfa" 
                                   FontSize="20" 
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#10FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                 </Border>
            </StackPanel>

            <!-- Row 1: Current Task & Header -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="CURRENT TASK" 
                           Foreground="#80FFFFFF" 
                           FontSize="10" 
                           FontWeight="Bold"/>
                <TextBox x:Name="TaskNameInput"
                         Text="No active task" 
                         Foreground="White" 
                         Background="Transparent"
                         FontSize="16" 
                         FontWeight="Medium"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         CaretBrush="White"
                         Margin="0,5,0,0"
                         Padding="0"/>
                
                <!-- Project Selection -->
                <ComboBox x:Name="ProjectComboBox"
                          Margin="0,4,0,0"
                          BorderThickness="0"
                          Background="Transparent"
                          Foreground="#BBFFFFFF"
                          FontSize="12"
                          DisplayMemberPath="Name" 
                          SelectedValuePath="Id"
                          Height="26"
                          VerticalContentAlignment="Center">
                    <ComboBox.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#303030" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                    </ComboBox.Resources>
                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton Name="ToggleButton" 
                                              BorderThickness="0"
                                              Background="Transparent"
                                              Foreground="{TemplateBinding Foreground}"
                                              Focusable="false"
                                              IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter Grid.Column="0" Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                    <Path x:Name="Arrow" Grid.Column="1" Fill="{TemplateBinding Foreground}" Data="M0,0 L4,4 L8,0 z" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" Opacity="0.5"/>
                                                </Grid>
                                             </Border>
                                             <ControlTemplate.Triggers>
                                                 <Trigger Property="IsMouseOver" Value="True">
                                                     <Setter TargetName="Arrow" Property="Opacity" Value="1"/>
                                                 </Trigger>
                                             </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" Background="#252525" BorderThickness="1" BorderBrush="#404040" CornerRadius="4"/>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                                <ContentPresenter IsHitTestVisible="False" Margin="0,0,15,0"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                            </Grid>
                        </ControlTemplate>
                    </ComboBox.Template>
                </ComboBox>
            </StackPanel>
            
            <!-- Row 2: Today's Tasks -->
            <Grid Grid.Row="2" x:Name="TaskListArea">
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="TODAY'S PLAN" 
                               Foreground="#80FFFFFF" 
                               FontSize="10" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1" 
                            Content="⟳"
                            FontSize="14"
                            Foreground="#80FFFFFF"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="RefreshButton_Click"
                            Padding="5,0"/>
                </Grid>

                 <ListView x:Name="TasksList" 
                          Grid.Row="1"
                          Background="Transparent" 
                          BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          SelectionChanged="TasksList_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="8,10"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" 
                                                CornerRadius="6" 
                                                Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                BorderBrush="#10FFFFFF" BorderThickness="0,0,0,1">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                             <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="4" Height="4" CornerRadius="2" Background="{Binding StatusColor, FallbackValue=#a78bfa}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" TextTrimming="CharacterEllipsis" FontSize="13"/>
                             </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Shimmer Overlay for Loading Effect -->
            <Border x:Name="ShimmerOverlay" 
                    Grid.Row="2" 
                    CornerRadius="8" 
                    IsHitTestVisible="False" 
                    Visibility="Collapsed">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#00FFFFFF" Offset="0.0" />
                        <GradientStop Color="#10FFFFFF" Offset="0.5" />
                        <GradientStop Color="#00FFFFFF" Offset="1.0" />
                        <LinearGradientBrush.Transform>
                            <TranslateTransform x:Name="ShimmerTransform" X="-300" />
                        </LinearGradientBrush.Transform>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</Window>
