<Window x:Class="FocusHudWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusHudWpf"
        mc:Ignorable="d"
        Title="FocusHUD" Height="60" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">

    <Border CornerRadius="14" 
            BorderThickness="1"
            MouseDown="Border_MouseDown">
        
        <Border.Background>
            <SolidColorBrush Color="#1e1e24" Opacity="0.1"/>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#50FFFFFF" Offset="0"/>
                <GradientStop Color="#10FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <!-- Header -->
                <RowDefinition Height="*"/>  <!-- List Area -->
            </Grid.RowDefinitions>

            <!-- Row 0: Header / Timer -->
            <Grid Grid.Row="0" Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Play Button -->
                    <ColumnDefinition Width="*"/>    <!-- Task Info -->
                    <ColumnDefinition Width="Auto"/> <!-- Timer -->
                </Grid.ColumnDefinitions>

                <!-- Play Button -->
                <Border x:Name="PlayButton" 
                        Grid.Column="0" 
                        Width="32" Height="32" 
                        CornerRadius="16" 
                        Background="#3e455e"
                        Cursor="Hand"
                        MouseLeftButtonDown="PlayButton_Click">
                    <TextBlock x:Name="PlayIcon"
                               Text="▶" 
                               Foreground="White" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="14"/>
                </Border>

                <!-- Task Name -->
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center" 
                            Margin="12,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="TaskName_Click">
                    <TextBlock x:Name="TaskNameText"
                               Text="Loading..." 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="Medium"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="Click to change" 
                               Foreground="#6b7280" 
                               FontSize="9" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Timer -->
                <TextBlock x:Name="TimerText"
                           Grid.Column="2" 
                           Text="25:00" 
                           Foreground="#a78bfa" 
                           FontSize="14" 
                           VerticalAlignment="Center"
                           FontFamily="Consolas, Monospace"/>
            </Grid>
            
            <!-- Row 1: Task List (Hidden by default) -->
            <Grid Grid.Row="1" x:Name="TaskListArea" Visibility="Collapsed">
                 <ListView x:Name="TasksList" 
                          Background="Transparent" 
                          BorderThickness="0"
                          Margin="5"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          SelectionChanged="TasksList_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" 
                                                CornerRadius="8" 
                                                Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#50FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                             <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Status Dot (Fake) -->
                                <Border Width="8" Height="8" CornerRadius="4" Background="{Binding StatusColor}" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" TextTrimming="CharacterEllipsis" FontSize="13"/>
                             </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Shimmer Overlay for Loading Effect -->
            <Border x:Name="ShimmerOverlay" 
                    Grid.RowSpan="2" 
                    CornerRadius="14" 
                    IsHitTestVisible="False" 
                    Visibility="Collapsed">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                        <GradientStop Color="#00FFFFFF" Offset="0.0" />
                        <GradientStop Color="#20FFFFFF" Offset="0.5" />
                        <GradientStop Color="#00FFFFFF" Offset="1.0" />
                        <LinearGradientBrush.Transform>
                            <TranslateTransform x:Name="ShimmerTransform" X="-300" />
                        </LinearGradientBrush.Transform>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</Window>
